# $Header$


depend() {
	need localmount
}

start() {
	if [ -n "$CONSOLEFONT" ] ; then
		if [ -e /usr/bin/consolechars ] ; then
			/usr/bin/consolechars --font=${CONSOLEFONT}
		fi
	fi
	return
}
