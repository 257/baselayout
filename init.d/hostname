# $Header$


depend() {
	need localmount
}

checkconfig() {
	if [ ! -f /etc/hostname ] || [ -z "$(cat /etc/hostname)" ]
	then
		eerror "You need to set /etc/hostname to a valid hostname"
		return 1
	fi
}

start() {
	local myhost=""
	if ! checkconfig
	then
		myhost="localhost"
	else
		myhost="$(cat /etc/hostname)"
	fi
	ebegin "Setting hostname to ${myhost}"
	/bin/hostname "${myhost}"
	eend $? "Failed to set the hostname"
}


# vim:ts=4
