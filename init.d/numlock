# $Header$


depend() {
	need localmount
}

start() {
	ebegin "Enabling numlock on ttys"
	for tty in $(seq 1 11)
	do
		setleds -D +num < /dev/tty${tty} &>/dev/null
	done
	eend $? "Failed to enable numlock"
}

stop() {
	ebegin "Disabling numlock on ttys"
	for tty in $(seq 1 11)
	do
		setleds -D -num < /dev/tty${tty} &>/dev/null
	done
	eend $? "Failed to disable numlock"
}


# vim:ts=4
