#!/sbin/runscript
# Copyright 1999-2006 Gentoo Foundation
# Distributed under the terms of the GNU General Public License v2

depend() {
	need checkroot
	after modules
}

start() {
	local retval=0 x=

	# Start our volumes, RAID, LVM, etc
    	for x in ${RC_VOLUME_ORDER} ; do
		start_addon "${x}"
   	done

	# Setup dm-crypt mappings if any
	start_addon dm-crypt

	if [[ -z ${CDBOOT} ]] ; then
		ebegin $"Checking all filesystems"
		if get_bootparam "forcefsck" ; then
			ewarn $"A full fsck has been forced"
			if [[ $(uname) == "Linux" ]] ; then
				fsck -C -T -R -A -a -f
			else
				fsck
			fi
			retval=$?
		else
			if [[ $(uname) == "Linux" ]] ; then
				fsck -C -T -R -A -a
			else
				#fsck -p
				true
			fi
			retval=$?
		fi
		if [[ ${retval} -eq 0 ]] ; then
			eend 0
		elif [[ ${retval} -ge 1 && ${retval} -le 3 ]] ; then
			eend 1 "Filesystem errors corrected."
			# Everything should be ok, so return a pass
			retval=0	
		else
			if [[ ${RC_FORCE_AUTO} == "yes" ]] ; then
				eend 2 "Fsck could not correct all errors, rerunning"
				if [[ $(uname) == "Linux" ]] ; then
					fsck -C -T -R -A -y
				else
					fsck -y
				fi
				retval=$?
			fi

			if [[ ${retval} -gt 3 ]] ; then
				eend 2 "Fsck could not correct all errors, manual repair needed"
				if is_vps_sys ; then
					halt -f
				elif [[ -x /sbin/sulogin ]] ; then
					/sbin/sulogin "${CONSOLE}"
				else
					return 1
				fi
			fi
		fi
	fi

	return ${retval}
}

# vim: set ts=4 :
